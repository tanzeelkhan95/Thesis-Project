 </ul> 
</div> 

{{> slider slides=slides}}

</section>

<!---FEATURED-CATEGORIES--->
<section class="featured-categories">
  <div class="container">
    <div class="row">
      {{#each featuredcategories}}
      <div class="col-md-4">
        <img src="{{this.imageUrl}}" alt="">
      </div>
      {{/each}}
    </div>
  </div>
</section>

<!---ON SALE PRODUCTS--->

<section class="on-sale">
  <div class="container">
    <div class="title-box">
      <h2>ON SALE</h2>
    </div>
    <div class="row">
    {{#each products}}
    {{#if this.salecheck}}
      <div class="col-md-3">
        <div class="product-top">
          <img src="{{this.imageName}}">
          <div class="overlay-right">
            <button type="button" class="btn btn-secondary" title="QUICK SHOP">
              <i class="fa fa-eye"></i>
            </button>
            <button type="button" class="btn btn-secondary" title="ADD TO WISHLIST">
              <i class="fa fa-heart-o"></i>
            </button>
            <form action="/add-to-cart" method="POST">
               <input type="hidden" name="productid" value="{{this._id}}">
               <input type="hidden" name="name" value="{{this.productName}}">
               <input type="hidden" name="price" value="{{this.price}}">
               <input type="hidden" name="img" value="{{this.imageName}}">
            <button type="submit" class="btn btn-secondary" title="ADD TO CART">
              <i class="fa fa-shopping-cart"></i>
            </button>
            </form>
          </div>
        </div>
        <div class="product-bottom text-center">
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star-half-o"></i>
            <h3>{{this.productName}}</h3>
            <h5>{{this.price}}</h5>
        </div>
      </div>
      {{/if}}
      {{/each}}
    </div>
  </div>
</section>

<!---New Products--->

<section class="new-products">
<div class="container">
    <div class="title-box">
      <h2>NEW ARRIVALS</h2>
    </div>
    <div class="row">
      {{#each products}}
      {{#if this.newcheck}}
      <div class="col-md-3">
        <div class="product-top">
          <img src="{{this.imageName}}">
          <div class="overlay-right">
            <button type="button" class="btn btn-secondary" title="QUICK SHOP">
              <i class="fa fa-eye"></i>
            </button>
            <button type="button" class="btn btn-secondary" title="ADD TO WISHLIST">
              <i class="fa fa-heart-o"></i>
            </button>
            <form action="/add-to-cart" method="POST">
               <input type="hidden" name="productid" value="{{this._id}}">
               <input type="hidden" name="name" value="{{this.productName}}">
               <input type="hidden" name="price" value="{{this.price}}">
               <input type="hidden" name="img" value="{{this.imageName}}">
            <button type="submit" class="btn btn-secondary" title="ADD TO CART">
              <i class="fa fa-shopping-cart"></i>
            </button>
            </form>
          </div>
        </div>
        <div class="product-bottom text-center">
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star-half-o"></i>
            <h3>{{this.productName}}</h3>
            <h5>{{this.price}}</h5>
        </div>
      </div>
      {{/if}}
      {{/each}}
    </div>
  </div>
</section>

<!---Website Features--->

<section class="website-features">
  <div class="container">
    <div class="row">
      {{#each featurebox}}
      <div class="col-md-3 feature-box">
           <img src="{{this.imageUrl}}">
           <div class="feature-text">
            <p><b>{{this.bold}} </b> {{this.para}}</p>
           </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

