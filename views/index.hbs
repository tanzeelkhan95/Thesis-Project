  <li>TOPS<i class="fa fa-angle-right"></i>
   <ul>
    <li>JACKETS</li>
    <li>LONG COATS</li>
    <li>HOODIES</li>
    <li>SHIRTS</li>
    <li>T-SHIRTS</li>
  </ul>
  </li>
  <li>BOTTOMS<i class="fa fa-angle-right"></i>
   <ul>
    <li>JEANS</li>
    <li>CHINOS</li>
    <li>TROUSERS</li>
    <li>SHORTS</li>
  </ul>
